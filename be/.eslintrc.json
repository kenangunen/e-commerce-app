{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off", // console.log kullanımına izin vermek istiyorsanız
    "no-unused-vars": "warn" // Kullanılmayan değişkenleri uyarı olarak göstermek
  }
}
